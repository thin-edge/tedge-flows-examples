{
  "name": "sparkplug-publisher",
  "version": "0.0.1",
  "description": "Flow converts thin-edge.io measurements to Sparkplug B DDATA/NDATA protobuf messages",
  "source": "src/main.ts",
  "module": "lib/main.js",
  "type": "module",
  "scripts": {
    "prebuild": "npx buf generate",
    "build": "esbuild src/main.ts --target=es2018 --bundle --outfile=lib/main.js --format=esm --drop-labels=DEV,TEST",
    "test": "jest --coverageProvider=v8 --coverage"
  },
  "author": "thin-edge.io",
  "license": "Apache-2.0",
  "dependencies": {
    "@bufbuild/protobuf": "^2.11.0"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.65.0",
    "@bufbuild/protoc-gen-es": "^2.11.0",
    "@types/jest": "^30.0.0",
    "esbuild": "^0.25.5",
    "esbuild-register": "^3.6.0",
    "jest": "^30.0.4",
    "jest-esbuild": "^0.4.0",
    "prettier": "3.6.2",
    "typescript": "^5.8.3"
  }
}
